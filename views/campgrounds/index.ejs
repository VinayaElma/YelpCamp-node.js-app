<% include ../partials/header %>

<div class="container">
   
   <header class="jumbotron">

      <div class="container" style="text-align:center">
         <h1>WELCOME TO YELPCAMP!</h1>
         <p>Better to see something once than hear about it a thousand times</p>
         <p><a class="btn btn-primary btn-sm" href="/campgrounds/new">Add new campground</a></p>
      </div>
      
   </header>

   <div class="row text-center" style="display:flex;flex-wrap:wrap;">
      <% campgrounds.forEach(function(campground){ %>
      <div class="col-md-3 col-sm-6 img-thumbnail img-responsive" style="margin:10px;width:100%;">
         <div>
            <img src=" <%= campground.image %> ">
         </div>
         <div>
            <h4> <%= campground.name %> </h4>
         </div>
         <p>
            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary btn-sm">MoreInfo</a>
         </p>
      </div>
      <% }); %>
   </div>
</div>

<% include ../partials/footer %>